<%- include('../partials/header.ejs') %>
<link rel="stylesheet" href="/css/blog-container.css">
<link rel="stylesheet" href="/css/addblogform.css">

  </head>
  <body>
    <%- include('../partials/navbar.ejs') %>
    <div class="form-container">
        <form action="/updateblog" method="POST">
            <div class="row">
              <div class="col-25">
                <label for="fname">Blog Title</label>
              </div>
              <div class="col-75">
                <input type="text" id="fname" name="title" placeholder="Your Blog Name.." value="<%= blog.title %>">
              </div>
            </div>
            <div class="row">
                <div class="col-25">
                  <label for="lname">Blog Image</label>
                </div>
                <div class="col-75">
                  <input type="text" id="lname" name="imageUrl" placeholder="Your Blog Image.."  value="<%= blog.imageUrl %>">
                </div>
              </div>
            <div class="row">
              <div class="col-25">
                <label for="lname">Blog Author</label>
              </div>
              <div class="col-75">
                <input type="text" id="lname" name="author" placeholder="Author Name.." value="<%= blog.author %>">
              </div>
            </div>
            <div class="row">
              <div class="col-25">
                <label for="product">Blog Category</label>
              </div>
              <div class="col-75">
                <select id="product" name="category" >
                <option value="Sports" <%= blog.category == 'Sports' ? 'selected' : '' %> >Sports</option>
                <option value="education" <%= blog.category == 'education' ? 'selected' : '' %>  >education</option>
                <option value="Technology" <%= blog.category == 'Technology' ? 'selected' : '' %>  >Technology</option>
                <option value="Science" <%= blog.category == 'Science' ? 'selected' : '' %>  >Science</option>
                <option value="Food" <%= blog.category == 'Food' ? 'selected' : '' %>  >Food</option>
                <option value="Nature" <%= blog.category == 'Nature' ? 'selected' : '' %>  >Nature</option>
        
                </select>
              </div>
            </div>
            <div class="row">
              <div class="col-25">
                <label for="subject">Blog Description</label>
              </div>
              <div class="col-75">
                <textarea id="subject" name="description" placeholder="Write Blog Description.." style="height:200px"><%= blog.description %></textarea>
              </div>
            </div>
            <input type="hidden" name="id" value="<%= blog._id %>">
            <div class="row">
              <input type="submit" value="Submit">
            </div>
          </form>
    </div>
    
    <%- include('../partials/footer.ejs') %>
